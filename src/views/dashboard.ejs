<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>PlaneScheduler â€” Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><i class="bi bi-airplane"></i> Plane Scheduler</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav ms-auto align-items-center">
          <li class="nav-item me-3">
            <span class="navbar-text"><i class="bi bi-person-circle"></i> <%= user.username %></span>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-light btn-sm" href="/auth/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid mt-3 mb-5" data-user-id="<%= user.id %>" data-user-privileges="<%= user.privileges %>">
    <%- include('partials/flash') %>

    <!-- Aircraft selector -->
    <div class="row mb-3">
      <div class="col-md-4">
        <label for="aircraftSelect" class="form-label fw-bold">Select Aircraft</label>
        <select id="aircraftSelect" class="form-select">
          <option value="">All Aircraft</option>
        </select>
      </div>
      <div class="col-md-8 d-flex align-items-end flex-wrap gap-2 mt-2 mt-md-0">
        <button class="btn btn-sm btn-primary" id="newReservationBtn">
          <i class="bi bi-plus-lg"></i> <span class="d-none d-md-inline">New </span>Reservation
        </button>
        <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#issueModal">
          <i class="bi bi-exclamation-triangle"></i> <span class="d-none d-md-inline">Report </span>Issue
        </button>
        <% if (user.privileges === 'admin') { %>
        <button class="btn btn-sm btn-info" id="manageUsersBtn">
          <i class="bi bi-people"></i> Users
        </button>
        <button class="btn btn-sm btn-secondary" id="manageAircraftBtn">
          <i class="bi bi-airplane-engines"></i> Aircraft
        </button>
        <% } %>
        <% if (user.privileges === 'admin' || user.privileges === 'maintainer') { %>
        <button class="btn btn-sm btn-outline-dark" id="usageReportBtn">
          <i class="bi bi-file-earmark-spreadsheet"></i> Usage
        </button>
        <% } %>
      </div>
    </div>

    <!-- Notification subscriptions -->
    <div class="row mb-3">
      <div class="col-12">
        <div class="card shadow-sm">
          <div class="card-header bg-light d-flex justify-content-between align-items-center py-2"
               data-bs-toggle="collapse" data-bs-target="#subscriptionBody" role="button" style="cursor:pointer;">
            <span><i class="bi bi-bell"></i> <strong>Notification Subscriptions</strong>
              <small class="text-muted ms-2">Get emailed when reservations change for subscribed aircraft</small>
            </span>
            <i class="bi bi-chevron-down"></i>
          </div>
          <div class="collapse" id="subscriptionBody">
            <div class="card-body py-2" id="subscriptionList">
              <span class="text-muted">Loading aircraft...</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Grounded aircraft banner -->
    <div id="groundedBanner" class="grounded-banner d-none mb-3">
      <div class="d-flex align-items-center flex-wrap gap-2">
        <span class="grounded-label"><i class="bi bi-exclamation-octagon-fill"></i> GROUNDED</span>
        <span id="groundedList"></span>
      </div>
    </div>

    <div class="row">
      <!-- Calendar column -->
      <div class="col-lg-8 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <div id="calendar"></div>
          </div>
        </div>
      </div>

      <!-- Issues panel -->
      <div class="col-lg-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-header bg-warning-subtle d-flex justify-content-between align-items-center">
            <strong><i class="bi bi-exclamation-triangle"></i> Aircraft Issues</strong>
            <span id="issueCount" class="badge bg-warning text-dark">0</span>
          </div>
          <div class="card-body p-0">
            <div id="issueList" class="list-group list-group-flush" style="max-height:500px;overflow-y:auto;">
              <div class="list-group-item text-muted text-center py-4">No issues reported</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Reservation Modal (Create / Edit) -->
  <div class="modal fade" id="reservationModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="resModalTitle"><i class="bi bi-calendar-plus"></i> New Reservation</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="reservationForm">
            <input type="hidden" id="resId" value="" />
            <div class="mb-3">
              <label for="resAircraft" class="form-label">Aircraft</label>
              <select id="resAircraft" class="form-select" required></select>
            </div>
            <div class="mb-3">
              <label for="resTitle" class="form-label">Type</label>
              <select id="resTitle" class="form-select" required>
                <option value="Personal" selected>Personal</option>
                <option value="Shared">Shared</option>
                <option value="Maintenance">Maintenance</option>
              </select>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="resStart" class="form-label">Start</label>
                <input type="datetime-local" class="form-control" id="resStart" required />
              </div>
              <div class="col-md-6 mb-3">
                <label for="resEnd" class="form-label">End</label>
                <input type="datetime-local" class="form-control" id="resEnd" required />
              </div>
            </div>
            <div class="mb-3">
              <label for="resNotes" class="form-label">Notes (optional)</label>
              <textarea class="form-control" id="resNotes" rows="2"></textarea>
            </div>
            <div id="resError" class="alert alert-danger d-none"></div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="submitReservation">
            <span class="spinner-border spinner-border-sm d-none" id="resSpinner"></span>
            <span id="resBtnLabel">Create Reservation</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Report Issue Modal -->
  <div class="modal fade" id="issueModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-exclamation-triangle"></i> Report Issue</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="issueForm">
            <div class="mb-3">
              <label for="issAircraft" class="form-label">Aircraft</label>
              <select id="issAircraft" class="form-select" required></select>
            </div>
            <div class="mb-3">
              <label for="issTitle" class="form-label">Issue Title</label>
              <input type="text" class="form-control" id="issTitle" required />
            </div>
            <div class="mb-3">
              <label for="issSeverity" class="form-label">Severity</label>
              <select id="issSeverity" class="form-select" required>
                <option value="low">Low</option>
                <option value="medium" selected>Medium</option>
                <option value="high">High</option>
                <option value="grounding">Grounding</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="issDescription" class="form-label">Description (optional)</label>
              <textarea class="form-control" id="issDescription" rows="3"></textarea>
            </div>
            <div id="issError" class="alert alert-danger d-none"></div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-warning" id="submitIssue">
            <span class="spinner-border spinner-border-sm d-none" id="issSpinner"></span>
            Submit Issue
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Reservation Detail Modal -->
  <div class="modal fade" id="reservationDetailModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="detailTitle">Reservation Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" id="detailBody"></div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary d-none" id="editReservation">
            <i class="bi bi-pencil"></i> Edit
          </button>
          <button type="button" class="btn btn-danger d-none" id="deleteReservation">
            <i class="bi bi-trash"></i> Delete
          </button>
          <button type="button" class="btn btn-success d-none" id="completeReservation">
            <i class="bi bi-check-circle"></i> Complete
          </button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- User Management Modal (admin only) -->
  <div class="modal fade" id="userManagementModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-people"></i> Manage Users</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <!-- Pending users section -->
          <h6 class="mb-3"><i class="bi bi-hourglass-split"></i> Pending Approval <span id="pendingCount" class="badge bg-danger">0</span></h6>
          <div id="pendingUsersList" class="mb-4">
            <p class="text-muted">No pending users</p>
          </div>
          <hr />
          <!-- All users section -->
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h6 class="mb-0"><i class="bi bi-person-lines-fill"></i> All Users</h6>
            <button class="btn btn-sm btn-primary" id="addUserBtn"><i class="bi bi-plus-lg"></i> Add User</button>
          </div>
          <div class="table-responsive">
            <table class="table table-sm table-hover" id="allUsersTable">
              <thead>
                <tr>
                  <th>Username</th>
                  <th>Email</th>
                  <th>Privileges</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="allUsersBody">
              </tbody>
            </table>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Add/Edit User Modal -->
  <div class="modal fade" id="userFormModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="userFormTitle"><i class="bi bi-person-plus"></i> Add User</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="userForm">
            <input type="hidden" id="ufId" />
            <div class="mb-3">
              <label for="ufUsername" class="form-label">Username</label>
              <input type="text" class="form-control" id="ufUsername" minlength="3" maxlength="50" required />
            </div>
            <div class="mb-3">
              <label for="ufEmail" class="form-label">Email</label>
              <input type="email" class="form-control" id="ufEmail" required />
            </div>
            <div class="mb-3">
              <label for="ufPassword" class="form-label">Password <span id="ufPasswordHint" class="text-muted small"></span></label>
              <input type="password" class="form-control" id="ufPassword" minlength="6" />
            </div>
            <div class="mb-3">
              <label for="ufPrivileges" class="form-label">Privileges</label>
              <select id="ufPrivileges" class="form-select" required>
                <option value="user">user</option>
                <option value="maintainer">maintainer</option>
                <option value="admin">admin</option>
                <option value="pending">pending</option>
              </select>
            </div>
            <div id="ufError" class="alert alert-danger d-none"></div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="submitUserForm">
            <span class="spinner-border spinner-border-sm d-none" id="ufSpinner"></span>
            Save User
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Aircraft Management Modal (admin only) -->
  <div class="modal fade" id="aircraftManagementModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-airplane-engines"></i> Manage Aircraft</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h6 class="mb-0">Fleet</h6>
            <button class="btn btn-sm btn-primary" id="addAircraftBtn"><i class="bi bi-plus-lg"></i> Add Aircraft</button>
          </div>
          <div class="table-responsive">
            <table class="table table-sm table-hover">
              <thead>
                <tr>
                  <th>Tail #</th>
                  <th>Make</th>
                  <th>Model</th>
                  <th>Year</th>
                  <th>Hobbs</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="aircraftMgmtBody">
              </tbody>
            </table>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Add/Edit Aircraft Modal -->
  <div class="modal fade" id="aircraftFormModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="acFormTitle"><i class="bi bi-airplane"></i> Add Aircraft</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="aircraftForm">
            <input type="hidden" id="acfId" />
            <div class="mb-3">
              <label for="acfTail" class="form-label">Tail Number</label>
              <input type="text" class="form-control" id="acfTail" required />
            </div>
            <div class="mb-3">
              <label for="acfMake" class="form-label">Make</label>
              <input type="text" class="form-control" id="acfMake" required />
            </div>
            <div class="mb-3">
              <label for="acfModel" class="form-label">Model</label>
              <input type="text" class="form-control" id="acfModel" required />
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="acfYear" class="form-label">Year</label>
                <input type="number" class="form-control" id="acfYear" min="1900" max="2100" />
              </div>
              <div class="col-md-6 mb-3">
                <label for="acfHobbs" class="form-label">Last Hobbs</label>
                <input type="number" class="form-control" id="acfHobbs" min="0" step="0.1" value="0" />
              </div>
            </div>
            <div id="acfError" class="alert alert-danger d-none"></div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="submitAircraftForm">
            <span class="spinner-border spinner-border-sm d-none" id="acfSpinner"></span>
            Save Aircraft
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Complete Reservation Modal -->
  <div class="modal fade" id="completeModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-check-circle"></i> Complete Reservation</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="completeForm">
            <div class="mb-3">
              <label for="compStartHobbs" class="form-label">Hobbs Start</label>
              <input type="number" class="form-control" id="compStartHobbs" min="0" step="0.1" required />
            </div>
            <div class="mb-3">
              <label for="compEndHobbs" class="form-label">Hobbs End</label>
              <input type="number" class="form-control" id="compEndHobbs" min="0" step="0.1" required />
            </div>
            <div id="compError" class="alert alert-danger d-none"></div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-success" id="submitComplete">
            <span class="spinner-border spinner-border-sm d-none" id="compSpinner"></span>
            Mark Complete
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Usage Report Modal -->
  <div class="modal fade" id="usageReportModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-file-earmark-spreadsheet"></i> Usage Report</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="usageReportForm">
            <div class="mb-3">
              <label for="usageAircraft" class="form-label">Aircraft</label>
              <select id="usageAircraft" class="form-select" required>
                <option value="">All Aircraft</option>
              </select>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="usageStart" class="form-label">Start Date</label>
                <input type="date" class="form-control" id="usageStart" required />
              </div>
              <div class="col-md-6 mb-3">
                <label for="usageEnd" class="form-label">End Date</label>
                <input type="date" class="form-control" id="usageEnd" required />
              </div>
            </div>
            <div id="usageError" class="alert alert-danger d-none"></div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="exportUsage">
            <i class="bi bi-download"></i> Export CSV
          </button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>
